<style>
    body{
        padding: 0;
        margin: 0;
        width: 100vw;
        height: 100vh;
        background: #262626;
        box-sizing: border-box;
        color: #fff;
    }
    
   body> h1{
        text-align: center;
        color: #fff;
    }
    ul{
        width: 100vw;
        height: 100vh;
        list-style: none;
        color: #fff;
        margin: 0 auto;
        flex: initial;
    }
    
    li{
        display: inline-block;
        width: 28%;
        margin: 1.6%;
        /*float: left;*/
        border-radius: 15px;
        transition: .5s;
        overflow: hidden;
    }
    li img{
        width: 100%;
        height: 80%;
        border-radius: 15px;
        transition: .5s;
    }
    
     li:hover{
        transform: translateY(-20px);;
    }
</style>


<h1>Here is the Movies List</h1>

<% if(data.Response == "True"){ %>
    <ul>
    <% data["Search"].forEach(function(movies){ %>
        <li>
            <img src="<%= movies.Poster %>"> 
            <h2>Title - <%= movies.Title %> </h2> 
            <h2>Year - <%= movies.Year %> </h2> 
        </li>
    <% }) %>
</ul>
<% }else { %>
    <ul>
        <li>Move List Is Empty</li>
        <li>Move Not Found</li>
        <li>Something went wrong</li>
    </ul>
<% } %>

